{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Helper preset for Python projects",
  "packageRules": [
    {
      "matchPackageNames": ["python"],
      "matchUpdateTypes": ["major", "minor"],
      "automerge": false
    },
    {
      "packageRules": [
        {
          "matchDepTypes": ["dev"],
          "rangeStrategy": "pin"
        }
      ]
    }
  ]
}
